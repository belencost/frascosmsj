  height: 100vh;
  overflow: hidden;
}

/* Sol animado */
.sol {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background: var(--sol);
  position: absolute;
  top: 10%;
  left: 10%;
  animation: titilar 2s infinite alternate;
}

/* Estrella simple animada */
.estrella {
  position: absolute;
  width: 2px;
  height: 2px;
  background: var(--estrella);
  border-radius: 50%;
  animation: titilar 1.5s infinite alternate;
}

/* Animación de titilar */
@keyframes titilar {
  0% { opacity: 0.5; transform: scale(1); }
  100% { opacity: 1; transform: scale(1.5); }
}

/* Frascos visuales */
.frasco {
  width: 150px;
  height: 200px;
