/* Variables generales */
:root {
  --fondo-claro: linear-gradient(to top, #ffddb3, #ffd9d9);
  --fondo-oscuro: radial-gradient(circle, #000011 0%, #000000 100%);
  --sol: #FFD700;
  --estrella: #ffffff;
}

/* Estilo general del cuerpo */
body {
  margin: 0;
  font-family: sans-serif;
  background: var(--fondo-claro);
  color: #333;
  transition: all 0.5s ease;
}

/* Modo oscuro activado */
.modo-oscuro body {
  background: var(--fondo-oscuro);
  color: #eee;
}

/* Botón de cambio de modo */
#toggle-modo {
  position: fixed;
